{
  "openapi": "3.0.0",
  "info": {
    "title": "Jordan Locations API",
    "version": "1.0.0",
    "description": "Read-only API for governorates, districts, and areas in Jordan."
  },
  "servers": [
    {
      "url": "https://jordan-location-api.onrender.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/api/v1/governorates": {
      "get": {
        "summary": "Get all governorates",
        "tags": ["Governorates"],
        "responses": {
          "200": {
            "description": "List of all governorates",
            "content": {
              "application/json": {
                "example": [
                  { "governorate_id": 1, "name_ar": "عمان", "name_en": "Amman" },
                  { "governorate_id": 2, "name_ar": "إربد", "name_en": "Irbid" }
                ]
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/governorates/id/{id}": {
      "get": {
        "summary": "Get governorate by ID",
        "tags": ["Governorates"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Governorate found",
            "content": {
              "application/json": {
                "example": { "governorate_id": 1, "name_ar": "عمان", "name_en": "Amman" }
              }
            }
          },
          "404": { "description": "Governorate not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/api/v1/districts": {
      "get": {
        "summary": "Get all districts",
        "tags": ["Districts"],
        "parameters": [
          {
            "name": "governorate_id",
            "in": "query",
            "required": false,
            "schema": { "type": "integer" },
            "description": "Filter districts by governorate_id"
          }
        ],
        "responses": {
          "200": {
            "description": "List of districts",
            "content": {
              "application/json": {
                "example": [
                  { "district_id": 1, "governorate_id": 1, "name_ar": "لواء قصبة عمان", "name_en": "Amman District" }
                ]
              }
            }
          },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/api/v1/districts/id/{id}": {
      "get": {
        "summary": "Get district by ID",
        "tags": ["Districts"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "District found",
            "content": {
              "application/json": {
                "example": { "district_id": 1, "governorate_id": 1, "name_ar": "لواء قصبة عمان", "name_en": "Amman District" }
              }
            }
          },
          "404": { "description": "District not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/api/v1/areas": {
      "get": {
        "summary": "Get all areas",
        "tags": ["Areas"],
        "parameters": [
          { "name": "district_id", "in": "query", "required": true, "schema": { "type": "integer" } },
          { "name": "governorate_id", "in": "query", "required": true, "schema": { "type": "integer" } },
          { "name": "limit", "in": "query", "required": false, "schema": { "type": "integer", "default": 100 } },
          { "name": "offset", "in": "query", "required": false, "schema": { "type": "integer", "default": 0 } }
        ],
        "responses": {
          "200": {
            "description": "List of areas filtered by district and governorate",
            "content": {
              "application/json": {
                "example": [
                  { "area_id": 1, "district_id": 1, "governorate_id": 1, "name_ar": "الروضة", "name_en": "Al-Rawda" }
                ]
              }
            }
          },
          "400": { "description": "Missing district_id or governorate_id" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/api/v1/areas/id/{id}": {
      "get": {
        "summary": "Get area by ID",
        "tags": ["Areas"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Area found",
            "content": {
              "application/json": {
                "example": { "area_id": 1, "district_id": 1, "governorate_id": 1, "name_ar": "الروضة", "name_en": "Al-Rawda" }
              }
            }
          },
          "404": { "description": "Area not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
