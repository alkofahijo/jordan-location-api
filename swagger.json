{
  "openapi": "3.0.3",
  "info": {
    "title": "Jordan Locations API",
    "version": "1.0.0",
    "description": "API for governorates, districts, and areas in Jordan.",
    "contact": {
      "name": "FutureTech",
      "url": "https://jordan-location-api.onrender.com"
    }
  },
  "servers": [
    {
      "url": "https://jordan-location-api.onrender.com/api/v1",
      "description": "Production server"
    }
  ],
  "tags": [
    { "name": "Governorates", "description": "Jordan governorates" },
    { "name": "Districts", "description": "Jordan districts" },
    { "name": "Areas", "description": "Areas within districts" }
  ],
  "paths": {
    "/governorates": {
      "get": {
        "tags": ["Governorates"],
        "summary": "Get all governorates",
        "responses": {
          "200": {
            "description": "List of governorates",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "governorate_id": { "type": "integer", "example": 1 },
                      "name_ar": { "type": "string", "example": "عمان" },
                      "name_en": { "type": "string", "example": "Amman" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/governorates/id/{id}": {
      "get": {
        "tags": ["Governorates"],
        "summary": "Get a governorate by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer", "example": 1 },
            "description": "Governorate ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Governorate found",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Governorate" } } }
          },
          "404": { "description": "Governorate not found" }
        }
      }
    },
    "/districts": {
      "get": {
        "tags": ["Districts"],
        "summary": "Get all districts (optional: filter by governorate_id)",
        "parameters": [
          {
            "in": "query",
            "name": "governorate_id",
            "schema": { "type": "integer" },
            "description": "Filter districts by governorate_id"
          }
        ],
        "responses": {
          "200": {
            "description": "List of districts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/District" }
                }
              }
            }
          }
        }
      }
    },
    "/districts/id/{id}": {
      "get": {
        "tags": ["Districts"],
        "summary": "Get a district by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer", "example": 10 },
            "description": "District ID"
          }
        ],
        "responses": {
          "200": {
            "description": "District found",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/District" } } }
          },
          "404": { "description": "District not found" }
        }
      }
    },
    "/areas": {
      "get": {
        "tags": ["Areas"],
        "summary": "Get all areas filtered by district_id and governorate_id",
        "parameters": [
          {
            "in": "query",
            "name": "district_id",
            "required": true,
            "schema": { "type": "integer", "example": 10 },
            "description": "District ID"
          },
          {
            "in": "query",
            "name": "governorate_id",
            "required": true,
            "schema": { "type": "integer", "example": 1 },
            "description": "Governorate ID"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": { "type": "integer", "example": 100 },
            "description": "Maximum number of results"
          },
          {
            "in": "query",
            "name": "offset",
            "schema": { "type": "integer", "example": 0 },
            "description": "Number of items to skip"
          }
        ],
        "responses": {
          "200": {
            "description": "List of areas",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Area" } } } }
          },
          "400": { "description": "district_id and governorate_id are required" }
        }
      }
    },
    "/areas/id/{id}": {
      "get": {
        "tags": ["Areas"],
        "summary": "Get an area by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer", "example": 100 },
            "description": "Area ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Area found",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Area" } } }
          },
          "404": { "description": "Area not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Governorate": {
        "type": "object",
        "properties": {
          "governorate_id": { "type": "integer", "example": 1 },
          "name_ar": { "type": "string", "example": "عمان" },
          "name_en": { "type": "string", "example": "Amman" }
        }
      },
      "District": {
        "type": "object",
        "properties": {
          "district_id": { "type": "integer", "example": 10 },
          "governorate_id": { "type": "integer", "example": 1 },
          "name_ar": { "type": "string", "example": "لواء قصبة عمان" },
          "name_en": { "type": "string", "example": "Amman District" }
        }
      },
      "Area": {
        "type": "object",
        "properties": {
          "area_id": { "type": "integer", "example": 100 },
          "district_id": { "type": "integer", "example": 10 },
          "governorate_id": { "type": "integer", "example": 1 },
          "name_ar": { "type": "string", "example": "مدينة الحسين" },
          "name_en": { "type": "string", "example": "Hussein City" }
        }
      }
    }
  }
}
